<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ImageSharpMAUITest"
             x:Class="ImageSharpMAUITest.MainPage"
             x:DataType="local:MainPageModel"
             Title="ImageSharp Test">

    <Grid RowDefinitions="Auto,*" Margin="16" RowSpacing="8">
        <Button Grid.Row="0" Text="Load Image" Command="{Binding LoadImageCommand}" />
        <Editor Grid.Row="1" Text="{Binding OutputText}" />
    </Grid>

</ContentPage>
